<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="10dp"
    android:paddingStart="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/underline"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/all_store" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALL STORES"
            android:textColor="#545454"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@drawable/pro_shad"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_radius_product"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Img_Product1"
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/product_shoe" />

                <TextView
                    android:id="@+id/txt_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:lines="3"
                    android:maxHeight="3dp"
                    android:maxLines="3"
                    android:minHeight="3dp"
                    android:minLines="3"
                    android:text="@string/shazz"
                    android:textColor="#555455"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@drawable/pro_shad"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_radius_product"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ImgProduct2"
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/product_shoe" />

                <TextView
                    android:id="@+id/txt_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="3"
                    android:maxHeight="3dp"
                    android:maxLines="3"
                    android:minHeight="3dp"
                    android:minLines="3"
                    android:padding="10dp"
                    android:text="@string/coming"
                    android:textColor="#555455"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

